@model TalentHub.Models.Projeto

@{
    ViewData["Title"] = "Apagar Projeto";
}

<h3>Tem certeza que deseja apagar este projeto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Projeto
        </dt>
        <dd class="col-sm-10">
            @Model.NomeProjeto
        </dd>
    </dl>

    <form asp-action="Apagar" asp-controller="Projetos" asp-route-id="@Model.IdProjeto" method="post" class="my-3">
        <input type="hidden" name="__RequestVerificationToken" value="@ViewData["__RequestVerificationToken"]" />
        <input type="hidden" asp-for="IdProjeto" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
